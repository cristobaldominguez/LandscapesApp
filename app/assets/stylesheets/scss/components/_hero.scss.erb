.hero {
    
    &__div {
        position: absolute;
        top: 52px;
        width: 100%;
        height: 405px;
        overflow-x: hidden;
        z-index: -1;
        text-align: center;
        background: url(<%= asset_path 'header/day.jpg' %>) no-repeat center / auto 100% transparent;
    }
}

@media (prefers-color-scheme: dark) {

    .hero__div {
        background-image: url(<%= asset_path 'header/night.jpg' %>);
    }
}